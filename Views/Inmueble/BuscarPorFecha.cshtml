@model List<Inmobiliaria_DotNet.Models.Inmueble>

@{
    ViewData["Title"] = "Buscar Inmuebles Disponibles";
}

<h1>Buscar Inmuebles Disponibles</h1>

<form asp-action="MostrarDisponibles" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="fechaInicio" class="mr-2">Fecha de inicio</label>
        <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" required />
    </div>
    <div class="form-group mr-2">
        <label for="fechaFin" class="mr-2">Fecha final</label>
        <input type="date" id="fechaFin" name="fechaFin" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Ver Disponibilidad</button>
</form>
